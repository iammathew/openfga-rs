{
  "name": "openfga-vscode-client",
  "description": "OpenFGA VSCode extension",
  "author": "iammathew",
  "license": "Apache-2.0",
  "version": "0.0.1",
  "publisher": "vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/iammathew/openfga-rs"
  },
  "scripts": {
    "build": "tsc"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:openfga"
  ],
  "contributes": {
    "languages": [
      {
        "id": "openfga",
        "extensions": [
          ".openfga"
        ],
        "aliases": [
          "OpenFGA"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "OpenFGA",
      "properties": {
        "openfga.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "engines": {
    "vscode": "^1.72.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.72.0",
    "typescript": "^4.8.4"
  }
}
